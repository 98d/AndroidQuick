<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="QuickTheme">

        <!-- 配置qmui提供的theme -->
        <item name="qmui_skin_support_topbar_bg">?attr/app_primary_color</item>
        <item name="qmui_skin_support_topbar_separator_color">
            ?attr/qmui_skin_support_color_separator
        </item>
        <item name="qmui_skin_support_topbar_title_color">@color/qmui_config_color_white</item>
        <item name="qmui_skin_support_topbar_subtitle_color">@color/qmui_config_color_white</item>
        <item name="qmui_skin_support_topbar_text_btn_color_state_list">@color/topbar_btn_color</item>
        <item name="qmui_skin_support_topbar_image_tint_color">@color/qmui_config_color_white</item>
        <item name="QMUITopBarStyle">@style/QDTopBar</item>

        <item name="qmui_config_color_blue">@color/colorPrimary</item>
    </style>
    <!-- blue skin -->
    <style name="app_skin_blue" parent="AppTheme">

    </style>

    <!-- dark skin -->
    <style name="app_skin_dark" parent="AppTheme">
        <item name="qmui_config_color_blue">@color/colorDarkPrimary</item>

        <!-- 配置app自己的theme -->
        <item name="app_primary_color">@color/colorDarkPrimary</item>
        <item name="app_content_bg_primary_color">@color/frame_dark_background_color</item>
        <item name="app_content_bg_color">@color/frame_dark_primary_background_color</item>
    </style>

</resources>